{
  "info": {
    "name": "Dealer Management API",
    "description": "API collection for dealer and vehicle management with JWT authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://dealer-management-api-328e.onrender.com/api"
    },
    {
      "key": "jwt_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Dealers",
      "item": [
        {
          "name": "Get All Dealers",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/dealers",
              "host": ["{{base_url}}"],
              "path": ["dealers"]
            }
          }
        },
        {
          "name": "Create Dealer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Dealer\",\n  \"email\": \"test@dealer.com\",\n  \"subscriptionType\": \"PREMIUM\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/dealers",
              "host": ["{{base_url}}"],
              "path": ["dealers"]
            }
          }
        },
        {
          "name": "Get Premium Dealers",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/dealers/premium",
              "host": ["{{base_url}}"],
              "path": ["dealers", "premium"]
            }
          }
        }
      ]
    },
    {
      "name": "Vehicles",
      "item": [
        {
          "name": "Get All Vehicles",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/vehicles",
              "host": ["{{base_url}}"],
              "path": ["vehicles"]
            }
          }
        },
        {
          "name": "Create Vehicle",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dealerId\": 1,\n  \"model\": \"Tesla Model 3\",\n  \"price\": 45000.00,\n  \"status\": \"AVAILABLE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/vehicles",
              "host": ["{{base_url}}"],
              "path": ["vehicles"]
            }
          }
        },
        {
          "name": "Get Vehicles by Premium Dealers",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/vehicles/premium-dealers",
              "host": ["{{base_url}}"],
              "path": ["vehicles", "premium-dealers"]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Initiate Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dealerId\": 1,\n  \"amount\": 999.99,\n  \"method\": \"CARD\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/payment/initiate",
              "host": ["{{base_url}}"],
              "path": ["payment", "initiate"]
            }
          }
        },
        {
          "name": "Get Payment by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/payment/1",
              "host": ["{{base_url}}"],
              "path": ["payment", "1"]
            }
          }
        },
        {
          "name": "Get All Payments",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/payment",
              "host": ["{{base_url}}"],
              "path": ["payment"]
            }
          }
        }
      ]
    }
  ]
}
